#:kivy 1.9.1
<MainDeckScreen>:
    height: 500
    width: 500
    Image:
        source: 'images/deck_back.jpg'
        size_hint: 0.6, 0.6
        allow_stretch: True
        keep_ratio: True
    Button:
        text: 'Draw'
        on_press: root.draw()
        pos_hint: {'x': 0.5, 'y': 0.5}
        size_hint: 0.2, 0.2
    Button:
        # text: 'Draw with Disadvantage'
        on_press: root.draw_with_disadvantage()
        pos_hint: {'x': 0.2, 'y': 0.8}
        size_hint: 0.2, 0.2
        background_normal: 'images/muddle.jpg'
    Button:
        # text: 'Draw with Advantage'
        on_press: root.draw_with_advantage()
        pos_hint: {'x': 0.8, 'y': 0.8}
        size_hint: 0.2, 0.2
        background_normal: 'images/strengthen.jpg'
    Button:
        # text: 'Add Bless'
        on_press: root.add_bless()
        pos_hint: {'x': 0, 'y': 0.5}
        size_hint: 0.2, 0.2
        background_normal: 'images/bless.jpg'
    Button:
        # text: 'Add Curse'
        on_press: root.add_curse()
        pos_hint: {'x': 0, 'y': 0.2}
        size_hint: 0.2, 0.2
        background_normal: 'images/curse.jpg'
    Button:
        text: 'Shuffle'
        on_press: root.shuffle()
        pos_hint: {'x': 1, 'y': 0.5}
        size_hint: 0.2, 0.2
        background_normal: 'images/shuffle.png'
    