#:kivy 1.9.1
<MainDeckScreen>:
    id: root_window
    #height: 780
    #width: 360
    RelativeLayout:
        id: main_layout
        size_hint_x: 0.9
        pos_hint: {'center_x': 0.5}
        Button:
            text: 'Shuffle'
            on_press: root.shuffle()
            pos_hint: {'center_x': 0.1, 'center_y': 0.9}
            size_hint: 0.1, 0.1
            background_normal: 'images/shuffle.png'
            allow_stretch: True
            #keep_ratio: True  
        Button:
            # text: 'Add Bless'
            on_press: root.add_bless()
            pos_hint: {'center_y': 0.9, 'center_x': 0.5}
            # center_x: self.parent.center_x * 0.2
            # center_y: self.parent.center_y * 0.8
            size_hint: 0.1, 0.1
            #allow_stretch: True
            keep_ratio: True
            background_normal: 'images/bless_icon.png'
        Button:
            # text: 'Add Curse'
            on_press: root.add_curse()
            pos_hint: {'center_y': 0.9, 'center_x': 0.7}
            size_hint: 0.1, 0.1
            #allow_stretch: True
            keep_ratio: True
            background_normal: 'images/curse_icon.png'
        Button:
            # text: 'Draw with Disadvantage'
            on_press: root.draw_with_disadvantage()
            pos_hint: {'center_y': 0.9, 'center_x': 0.3}
            size_hint: 0.1, 0.1
            background_normal: 'images/muddle_icon.png'
            #allow_stretch: True
            keep_ratio: True
        Button:
            # text: 'Draw with Advantage'
            on_press: root.draw_with_advantage()
            pos_hint: {'center_y': 0.9, 'center_x': 0.9}
            size_hint: 0.1, 0.1
            background_normal: 'images/strengthen_icon.png'
            #allow_stretch: True
            keep_ratio: True
        Image:
            id: deck
            size_hint_x: 1
            size_hint_y: 0.3
            pos_hint: {'center_x': 0.5, 'center_y': 0.65}
            source: 'images/deck_back.jpg'
            allow_stretch: True
            #keep_ratio: True
        Button:
            id: draw
            #text: 'Draw'
            on_press: root.draw()
            #size_hint: 0.1, 0.1
            size_hint_y: 0.3
            size_hint_x: 1
            background_color: 0, 0, 0, 0
            #height: root.ids.deck.height
            #width: root.ids.deck.width
            #allow_stretch: True
            pos_hint: {'center_x': 0.5, 'center_y': 0.65}
        # RelativeLayout:
        #     size_hint_y: 0.3
        #     pos_hint: {'bottom': 0.9}    
        Image:
            id: discard_blank
            size_hint_y: 0.3
            size_hint_x: 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.35}
            source: 'images/blank.jpg'
            allow_stretch: True
        Image:
            id: discard_main
            size_hint_y: 0.3
            size_hint_x: 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.35}
            source: 'images/0.png'
            allow_stretch: True
